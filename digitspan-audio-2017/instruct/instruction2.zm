Block instruction2 // Provides instruction to the participant
{
		on_event:entry()
		{
			string presentation_var;
			string direction_var;
			string page_text = "<SOMETHING WENT WRONG WITH THE LANGUAGE SETTINGS>";
			string practice_text;
			if(CFG_LANGUAGE == ENGLISH) // Show Dutch instructions
			{			
				presentation_var = CFG_PRESENTATION == VISUAL_AND_AUDIO ? "on the screen and via the soundsystem.\n" : ( CFG_PRESENTATION == VISUAL ? "\non the screen.\n" : "via the soundsystem.\n");
				direction_var = DIGITSPAN_DIRECTION == FORWARD ? "given" : "reverse"; 
				practice_text = CFG_GIVE_PRACTISE ? "First we will do a short practice.\n":""; 
				
				page_text = 
				"Thank you!\n"
				"\n"
				"Now we repeat the task but you will have to switch around the digits.\n" 
				"I will list a sequence of digits "
				+ presentation_var +
				"Your task is then to type in the digits in the <b>"
				+ direction_var +  
				"</b> order and then hit Enter.\n"
				"\n"
				+ practice_text +
				"\n"
				"<i>Hit Enter when ready to start.</i>";
			}
			if(CFG_LANGUAGE == DUTCH) // Show Dutch instructions
			{
				presentation_var = CFG_PRESENTATION == VISUAL_AND_AUDIO ? "op het scherm en via het geluidsysteem." : ( CFG_PRESENTATION == VISUAL ? "op het scherm." : "via het geluidsysteem.");
				direction_var = DIGITSPAN_DIRECTION == FORWARD ? "zelfde" : "omgekeerde"; 
				practice_text = CFG_GIVE_PRACTISE ? "Eerst doen we een korte oefening.\n" : ""; 

				page_text = 
				"Dank u wel!\n"
				"\n"
				"Nu herhalen we de taak maar moet u de cijfers omdraaien. Ik presenteer een lijst van cijfers "
				+ presentation_var +
				"\n"
				"Uw taak is de cijfers in te typen in de <b>"
				+ direction_var +  
				"</b> volgorde en dan op Enter te drukken.\n"
				"\n"
				+ practice_text +
				"\n"
				"<i>Druk Enter om verder te gaan.</i>";			
			} 
			
			pause_page.set_text(page_text, true);
			
			pause_page.action(this);
		}
}
    
void instruction2_call(Part caller)
{
    // Activate the task. When the task is done, the registered caller
    // (c.q. the main experiment object) will automatically be signalled.
    instruction2.enter(caller);
}

